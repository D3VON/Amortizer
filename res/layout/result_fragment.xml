<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/result_fragment"
    android:tag="resultfragtag" >
    <!-- android:background="@drawable/pic" (don't include ".jpg") -->

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/result_text"
        android:textColor="@color/material_deep_teal_500"
        android:layout_alignParentTop="true"
        android:gravity="end"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp" />


    <Button
        android:id="@+id/button_ClearAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_button"
        android:layout_below="@id/resultText"
        android:gravity="center|end"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="italic"
        android:text="@string/describe_the_button"
        android:layout_below="@id/button_ClearAll"
        android:gravity="fill_horizontal|end"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />
    <Button
        android:id="@+id/button_ShowAmort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_amort_button"
        android:layout_below="@id/textView6"
        android:gravity="end"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />


</RelativeLayout>